<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/frame_headers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        app:layout_constraintTop_toBottomOf="@id/frame_headers"
        android:id="@+id/view_decoration_bar"
        android:background="@color/colorOnDarkSoft"
        android:layout_width="match_parent"
        android:layout_height="11px"/>
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/view_decoration_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/recyclerview_tier1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/tableview_basic_cell"
        tools:orientation="horizontal"
        tools:itemCount="4"/>


</androidx.constraintlayout.widget.ConstraintLayout>