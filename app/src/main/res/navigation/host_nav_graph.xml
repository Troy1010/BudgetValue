<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/importFrag">
    <action
        android:id="@+id/errorFrag_clear_backstack"
        app:destination="@id/errorFrag"
        app:launchSingleTop="true"
        app:popUpTo="@id/importFrag"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/categorizeFrag"
        android:name="com.tminus1010.budgetvalue.transactions.ui.CategorizeFrag"
        android:label="Categorize"
        tools:layout="@layout/frag_categorize">
        <action
            android:id="@+id/action_categorizeFrag_to_categoryCustomizationFrag"
            app:destination="@id/categoryCustomizationFrag"
            app:popUpTo="@id/categorizeFrag" />
        <action
            android:id="@+id/action_categorizeFrag_to_newCategoryFrag"
            app:destination="@id/newCategoryFrag"
            app:popUpTo="@id/categorizeFrag" />
        <action
            android:id="@+id/action_categorizeFrag_to_splitTransactionFrag"
            app:destination="@id/splitTransactionFrag" />
    </fragment>
    <fragment
        android:id="@+id/importFrag"
        android:name="com.tminus1010.budgetvalue.accounts.ImportFrag"
        android:label="Import" />
    <fragment
        android:id="@+id/reconcileFrag"
        android:name="com.tminus1010.budgetvalue.reconciliations.ReconcileFrag"
        android:label="Reconcile" />
    <fragment
        android:id="@+id/planFrag"
        android:name="com.tminus1010.budgetvalue.plans.PlanFrag"
        android:label="Plan" />
    <fragment
        android:id="@+id/historyFrag"
        android:name="com.tminus1010.budgetvalue.history.HistoryFrag"
        android:label="History" />
    <fragment
        android:id="@+id/categoryCustomizationFrag"
        android:name="com.tminus1010.budgetvalue.categories.ui.CategoryCustomizationFrag"
        android:label="CategoryCustomizationFrag"
        tools:layout="@layout/frag_category_customization" />
    <fragment
        android:id="@+id/newCategoryFrag"
        android:name="com.tminus1010.budgetvalue.categories.ui.NewCategoryFrag"
        android:label="NewCategoryFrag"
        tools:layout="@layout/frag_new_category" />
    <fragment
        android:id="@+id/errorFrag"
        android:name="com.tminus1010.budgetvalue._core.ui.ErrorFrag"
        android:label="ErrorFrag" >
        <action
            android:id="@+id/action_errorFrag_to_importFrag"
            app:destination="@id/importFrag" />
    </fragment>
    <fragment
        android:id="@+id/splitTransactionFrag"
        android:name="com.tminus1010.budgetvalue.transactions.ui.SplitTransactionFrag"
        android:label="SplitTransactionFrag" />
</navigation>