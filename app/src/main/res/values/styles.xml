        <item name="colorPrimary">#2D882D</item>
        <item name="colorPrimaryVariant">#55AA55</item>
        <item name="colorOnPrimary">@color/colorOnLight</item>
        <item name="colorSecondary">#1B998C</item>
        <item name="colorSecondaryVariant">#5EC2B7</item>
        <item name="colorOnSecondary">@color/colorOnLight</item>
